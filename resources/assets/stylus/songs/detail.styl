.Song-detail
    height 40vh
    padding 1em
    display grid
    grid-template-columns 5fr 2fr
    grid-template-rows 1fr 1fr

.Song-info
    grid-column 1/-2
    display flex
    align-items center
    padding 0 1em
    grid-row 1/2

.Song-infoHeader
    flex 1
    display flex
    justify-content space-between
    padding 0 1em

.Song-media
    grid-column 1/-2
    grid-row 2/-1

.Song-photo
    grid-column 2/-1
    grid-row 1/-1
    display flex
    justify-content center
    align-items center
    overflow hidden

.Song-content
    display: grid;
    grid-template-columns: 5fr 2fr;

.Song-actions
    padding: 1em;

.Song-activity
    display: grid;
    grid-template-columns: 2fr 5fr;


